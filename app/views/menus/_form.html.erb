<%= form_with url: "/menus", model: @food, local: true do |f|%>

  <div class="field">
      <%= f.label :title, "メニュー選択" %><br />
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
  </div>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"menu_title" %>
  </div>

  <div class="field">
    <%= f.label :money, "値段" %><br />
    <%= f.text_area :money, class: :form__text, id:"udon_money" %>
  </div>

  <div class="field">
    <%= f.label :concept, "コンセプト" %><br />
    <%= f.text_area :concept, class: :form__text, id:"udon_concept" %>
  </div>

  <div class="field">
    <%= f.label :image, "うどんの画像" %><br />
    <%= f.file_field :image, id:"udon_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>